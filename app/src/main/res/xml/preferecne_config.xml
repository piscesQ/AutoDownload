<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory android:title="百度云设置">
        <SwitchPreference
            android:defaultValue="true"
            android:title="打开百度云自动重新下载"
            android:key="KEY_ENABLE_DOWNLOAD"/>

        <EditTextPreference
            android:title="输入框属性"
            android:defaultValue="0"
            android:key="KEY_EDIT"
            android:inputType="number"
            android:dialogTitle="请输入内容："
            android:hint="==此处输入=="/>

        <ListPreference
            android:title="列表属性"
            android:defaultValue="0"
            android:summary="摘要"
            android:key="KEY_LIST"
            android:dialogTitle="列表标题"
            android:entries="@array/list_settings_titles"
            android:entryValues="@array/list_settings_values"/>
    </PreferenceCategory>

    <PreferenceCategory android:title="Category Test">
        <SwitchPreference
            android:defaultValue="true"
            android:title="SWITCH_TEST"
            android:key="KEY_SWITCH_TEST"/>

        <EditTextPreference
            android:title="EDIT_TEST"
            android:defaultValue="0"
            android:key="KEY_EDIT_TEST"
            android:inputType="number"
            android:dialogTitle="请输入内容："
            android:hint="==此处输入=="/>

        <ListPreference
            android:title="LIST_TEST"
            android:defaultValue="0"
            android:summary="摘要"
            android:key="KEY_LIST_TEST"
            android:dialogTitle="列表标题"
            android:entries="@array/list_settings_titles"
            android:entryValues="@array/list_settings_values"/>
    </PreferenceCategory>
</PreferenceScreen>